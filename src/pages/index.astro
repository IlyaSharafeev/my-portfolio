---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.vue';
import Footer from '../components/Footer.astro';
import StartBanner from '../components/StartBanner.vue';
import TitleOverBlocks from '../components/TitleOverBlocks.vue';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
import Swiper from "../components/Swiper.astro";
import FeedBackForm from "../components/FeedBackForm.vue";
import Experience from "../components/Experience.astro";
import MobileMenu from "../components/MobileMenu.vue";
---

<!DOCTYPE html>
<html lang="en" style="overflow-x: hidden">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body class="overflow-hidden">
<div class="wrapper">
    <Header client:only="vue"/>
    <TitleOverBlocks title="About me" top="50"/>
    <StartBanner client:only="vue"/>
    <TitleOverBlocks title="Projects"/>
    <Swiper/>
    <TitleOverBlocks title="experience"/>
    <Experience />
    <TitleOverBlocks title="Feedback"/>
    <FeedBackForm client:only="vue"/>
    <MobileMenu client:only="vue"/>
</div>
<Footer />
</body>
</html>
